@model IEnumerable<My.AppStore.Models.CategoryModel>
@{ 
    ViewBag.Title = "Home Page";
}

@for (int i = 0; i < Model.Count(); i++)
{
    <div class="row">
        <div class="col-xs-12">
                <h1 class="header-title-main">@Model.ElementAt(i).Name</h1>
            
                @for (int j = 0; j < Model.ElementAt(i).Products.Count(); j++)
                {
                    <div class="col-xs-4 well" style="background-color: #5B3D29; color: wheat;">
                        <h3 class="site-title">@Model.ElementAt(i).Products.ElementAt(j).Name</h3>
                        <img style="max-width:100%; max-height:100%" src="@Model.ElementAt(i).Products.ElementAt(j).Images.FirstOrDefault()" />
                        <p>@Model.ElementAt(i).Products.ElementAt(j).Description</p>
                        <div class="row well" style="background:#D3C246;">
                            <div class="col-xs-6">
                                <p style="color: black;">@Model.ElementAt(i).Products.ElementAt(j).Price.Value.ToString("C")</p>
                            </div>
                            <div class="col-xs-6">
                                @Html.ActionLink("View Details", "Index", "Product", new { ID = Model.ElementAt(i).Products.ElementAt(j).ID }, new { @class = "submit-button" })
                            </div>
                        </div>
                    </div>
                }    
        </div>
    </div>
}
