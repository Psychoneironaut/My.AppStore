<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Ye Olde @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="description" content="A place to buy/download Will Mabrey's apps and games." />
</head>
<body class="my-body">
    <div class="navbar navbar-inverse navbar-fixed-top my-header">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionImage("Edit", new { id = MyId }, "~/Content/Images/Image.bmp", "Edit")this is for setting the image as a link*@
                @Html.ActionLink("Ye Olde App Store", "Index", "Home", new { area = "" }, new { @class = "navbar-brand header-title-main", @style= "color: #D3C246; font-size: 2.33em;" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "navbar-brand header-title-links", @style = "color: #A58C76; font-size: 1em;", @img = "/content/woodsign.gif" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "navbar-brand header-title-links", @style = "color: #A58C76; font-size: 1em;" }))</li>
                    @*Add this if statement in order to let Admins edit; LOOK UP SimpleMembershipProvider and use that for roles
                    @if(User.Identity.IsAuthenticated && (User.IsInRole("Admin")))
                    {
                        <li>@Html.ActionLink("ProductManager", "Index", "ProductsAdmin")</li>
                    }*@
                </ul>

                @Html.Partial("_Cart")

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Will's App Store</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
